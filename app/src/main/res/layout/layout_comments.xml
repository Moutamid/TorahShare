<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_comment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/default_profile" />

    <RelativeLayout
        style="@style/edittext_authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile_comment"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arthur black"
                android:textColor="@color/default_text_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publisher"
                android:padding="8dp"
                android:background="@color/white"
                android:layout_marginStart="10dp"
                android:textColor="@color/default_text_grey"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 min ago"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/default_text_grey"/>

    </RelativeLayout>

</RelativeLayout>