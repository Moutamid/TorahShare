<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/timeTv_mcg_right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mcg_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/profile_mcg_right"
            android:background="@drawable/bg_right_mcg"
            android:padding="10dp"
            android:text="jsagjhsgfjhg fjdsgfdshgfjdshgf jdhgfdshgfjhds fj"
            android:textColor="@color/white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_mcg_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/mcg_right"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_play_btn" />

    </RelativeLayout>

    <TextView
        android:id="@+id/timeTv_mcg_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20dp"
        android:text="10:40 am"
        android:textColor="@color/default_text_grey" />

</RelativeLayout>