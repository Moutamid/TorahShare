<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_light_pink"
    tools:context=".activity.approval.ApprovalActivity">

    <!--    APPROVAL NOTICE -->
    <RelativeLayout
        android:id="@+id/screen1"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/lalalala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Upload"
            android:textColor="@color/default_text_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/lalala"
            android:layout_below="@id/lalalala"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/youneedtogetapproved" />

        <LinearLayout
            android:id="@+id/lalala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="You need to get approved!"
                android:textColor="@color/default_text_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:text="To be able to upload videos to TorahShare you need to get approved by the admin."
                android:textColor="@color/default_text_grey"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/getApprovedBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:text="Get approved"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/default_corner_radius" />
        </LinearLayout>

    </RelativeLayout>

    <!--    FORM QUESTIONS -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/screen2"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/logo_layout" />

            <TextView
                style="@style/textview_title_authentication"
                android:layout_marginTop="20dp"
                android:text="Approval Form" />

            <androidx.cardview.widget.CardView
                style="@style/bg_card_sign_up"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/default_corner_radius"
                app:cardElevation="5dp">

                <LinearLayout style="@style/bg_linear_lyt_authentication">

                    <TextView
                        style="@style/small_title_authentication"
                        android:layout_marginTop="5dp"
                        android:text="What is your education?" />

                    <EditText
                        android:id="@+id/educationEt"
                        style="@style/edittext_authentication"
                        android:hint="Enter your answer" />

                    <TextView
                        style="@style/small_title_authentication"
                        android:text="What is your occupation?" />

                    <EditText
                        android:id="@+id/occupationEtSignUp"
                        style="@style/edittext_authentication"
                        android:hint="Enter your answer" />

                    <TextView
                        style="@style/small_title_authentication"
                        android:text="What religious group do you associate with?" />

                    <EditText
                        android:id="@+id/religionEtSignUp"
                        style="@style/edittext_authentication"
                        android:hint="Enter your answer" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/nextBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="40dp"
                        android:padding="15dp"
                        android:text="Next"
                        android:textAllCaps="false"
                        app:cornerRadius="@dimen/default_corner_radius" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!--    UPLOAD VIDEOS -->
    <RelativeLayout
        android:id="@+id/screen3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/applyBtn"
            android:orientation="vertical">

            <include layout="@layout/logo_layout" />

            <TextView
                style="@style/textview_title_authentication"
                android:layout_marginTop="20dp"
                android:text="Approval Form" />

            <TextView
                style="@style/small_title_authentication"
                android:layout_marginHorizontal="50dp"
                android:gravity="center"
                android:text="Please upload 2 examples of the content you are planning to upload to the app." />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/video1placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@drawable/empty_placeholder" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/videoView1Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/default_corner_radius"
                    app:cardElevation="0dp">

                    <VideoView
                        android:id="@+id/videoView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/videoPlayBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_play_btn" />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/video2placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@drawable/empty_placeholder" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/videoView2Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/default_corner_radius"
                    app:cardElevation="0dp">

                    <VideoView
                        android:id="@+id/videoView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/videoPlayBtn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_play_btn" />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/applyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.5"
            android:padding="15dp"
            android:text="Apply"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/default_corner_radius" />

    </RelativeLayout>

    <!--    SUCCESSFULLY UPLOADED LAYOUT  -->
    <RelativeLayout
        android:id="@+id/screen5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/logo_layout" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:src="@drawable/tick_mark" />

            <TextView
                style="@style/textview_title_authentication"
                android:layout_marginTop="20dp"
                android:text="Successfully uploaded"
                android:textColor="@color/default_green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="thank you for applying for the uploading part of the TorahShare app we are going to do our best to review it and will notify you via"
                android:textColor="@color/default_text_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textColor="@color/default_text_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="example@gmail.com"
                    android:id="@+id/emailTextView"
                    android:textColor="@color/skyBlue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" as soon"
                    android:textColor="@color/default_text_black" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="as possible!"
                android:layout_gravity="center"
                android:textColor="@color/default_text_black" />

        </LinearLayout>

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

    </RelativeLayout>

    <!--    WE ARE WORKING ON IT LAYOUT  -->
    <RelativeLayout
        android:id="@+id/screen6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/hhhhh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Upload"
            android:textColor="@color/default_text_black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/jjjj"
            android:layout_below="@+id/hhhhh"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:src="@drawable/weareworkingonit" />

        <ImageView
            android:id="@+id/jjjj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/error_placeholder" />

    </RelativeLayout>

    <!--    CAMERA LAYOUT   -->
    <RelativeLayout
        android:id="@+id/screen4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_purple"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/toppp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videos"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_close_24"
                app:tint="@color/white" />

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toppp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/default_corner_radius"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="@dimen/default_corner_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.priyankvasa.android.cameraviewex.CameraView
                            android:id="@+id/camera"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:keepScreenOn="true"
                            app:aspectRatio="16:9"
                            app:autoFocus="continuous_video"
                            app:awb="auto"
                            app:cameraMode="video_capture"
                            app:continuousFrameSize="W1920,H1080"
                            app:flash="off"
                            app:jpegQuality="high"
                            app:noiseReduction="high_quality"
                            app:opticalStabilization="true"
                            app:outputFormat="jpeg"
                            app:pinchToZoom="true"
                            app:shutter="short_time"
                            app:singleCaptureSize="W1920,H1080"
                            app:touchToFocus="true"
                            app:zsl="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginHorizontal="40dp"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                app:cardBackgroundColor="#66FFFFFF"
                                app:cardCornerRadius="@dimen/default_corner_radius"
                                app:cardElevation="0dp">

                                <TextView
                                    android:id="@+id/timestampTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:paddingHorizontal="20dp"
                                    android:paddingVertical="10dp"
                                    android:text="00:00"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                app:cardBackgroundColor="#66FFFFFF"
                                app:cardCornerRadius="@dimen/default_corner_radius"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/camerafacingBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_change_camera_facing" />

                                    <ImageView
                                        android:id="@+id/recordBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginHorizontal="20dp"
                                        android:layout_marginVertical="10dp"
                                        android:src="@drawable/ic_record_btn" />

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/galleryBtn"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@color/darkBlue" />


                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</RelativeLayout>